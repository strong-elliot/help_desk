<%= form_for(@article, html: {multipart: true}) do |f| %>

  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :tech %><br />
    <%= f.text_field :tech %>
  </p>
  <p>
    <%= f.label :descrtion %><br />
    <%= f.text_area :descrtion %>
  </p>
  <p>
    <%= f.label :resolution %><br />
    <%= f.text_area :resolution %>
  </p>
  <p>
    <%= f.label :catagory %><br />
    <%= f.text_field :catagory %>
  </p>

  <p>
  <%= f.label :tag_list %><br />
  <%= f.text_field :tag_list %>
</p>

<p>
  <% if @article.image.exists? %>
      <%= image_tag @article.image.url %><br/>
  <% end %>
  <%= f.label :image, "Attach a New Image" %><br />
  <%= f.file_field :image %>
</p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
