

<h1><%= @article.title %></h1>
<h3><%= "Employee:" %></h3>
<p><%= @article.user %></p>
<h3><%= "Tech:" %></h3>
<p><%= @article.tech %></p>
<h3><%= "Description of Problem:" %></h3>
<p><%= @article.descrtion %></p>
<h3><%= "Resolution:" %></h3>
<p><%= @article.resolution %></p>
<h3><%= "Tag:" %></h3>
<p><%= @article.catagory %></p>



<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>
<p><%= image_tag @article.image.url(:medium) %></p>


<h3>Comments</h3>
<%= render partial: 'articles/comment', collection: @article.comments %>
<%= link_to "edit", edit_article_path(@article) %>
<%= render partial: 'comments/form' %>
<%= link_to "<< Back to Articles List", articles_path %>
<%= link_to "Delete", @Article, method: :delete, data: { confirm: "Are you sure you want to delete this plan?"} %>
